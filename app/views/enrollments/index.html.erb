<h1><%= @course.name %> - Enrollments</h1>
<%= link_to 'Add enrollment',  new_course_enrollment_path(@course) %>

<hr>

<h2>Teachers</h2>
<ul>
  <% @teacher.each do |teach| %>
  <li>
    <%= teach.user.full_name %>
    <br>
    <%= link_to 'Remove', new_course_enrollment_path(@course, @teacher), method: :delete %>
  </li>
  <% end %>
</ul>

<h2>T.A.'s</h2>
<ul>
  <% @ta.each do |t| %>
  <li>
    <%= t.user.full_name %>
    <br>
    <%= link_to 'Remove', new_course_enrollment_path(@course, @ta), method: :delete %>
  </li>
  <% end %>
</ul>


<h2>Students</h2>
<ul>
  <% @student.each do |s| %>
  <li>
    <%= s.user.full_name %>
    <br>
    <%= link_to 'Remove', new_course_enrollment_path(@course, @student), method: :delete %>
  </li>
  <% end %>
</ul>
